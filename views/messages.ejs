<%- include('./shared/header') %>

<div class="bg-gray-100 flex justify-center items-center min-h-screen p-6">
  <% if (msg) { %>
  <div
    class="bg-green-50 text-green-700 p-4 rounded-lg mb-6 flex items-center space-x-2 shadow-md"
  >
    <svg
      fill="none"
      stroke-width="1.5"
      stroke="currentColor"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
      class="w-5 h-5"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M6 12L3.269 3.125A59.769 59.769 0 0121.485 12a59.768 59.768 0 01-18.216 8.875L6 12zm0 0h7.5"
      ></path>
    </svg>
    <p class="text-sm font-medium">Message sent successfully!</p>
  </div>
  <% } else { %>
  <div class="w-full max-w-lg p-8 bg-white rounded-xl shadow-xl">
    <h2 class="text-3xl font-bold text-gray-800 text-center mb-6">
      Welcome, <%= session.userName %>
    </h2>
    <form action="/sendMessage" method="post">
      <textarea
        name="content"
        id="message"
        class="w-full p-4 mb-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
        rows="5"
        placeholder="Type your message here..."
      ></textarea>
      <button
        class="w-full h-10 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-semibold transition-all duration-300 flex items-center justify-center space-x-2"
        type="submit"
      >
        <span>Send</span>
        <svg
          fill="none"
          stroke-width="1.5"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
          ></path>
        </svg>
      </button>
    </form>
  </div>
  <% } %>
</div>

<%- include('./shared/footer') %>
