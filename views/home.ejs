<%- include('./shared/header'); -%>
<div class="min-h-screen flex flex-col">
  <main
    class="flex-grow bg-gradient-to-r from-purple-500 to-blue-600 text-white"
  >
    <div class="container mx-auto text-center py-20">
      <h1 class="text-5xl font-extrabold tracking-tight text-white">
        Welcome to Sarahah
      </h1>
      <p class="text-xl mt-4 max-w-lg mx-auto">
        Send and receive anonymous feedback from friends and colleagues, all in
        one place.
      </p>

      <div class="mt-10">
        <% if (!session.loggedIn) { %>
        <a
          href="/signin"
          class="inline-block bg-white text-purple-700 font-semibold py-3 px-8 rounded-lg shadow-lg hover:bg-gray-100 transition duration-300 ease-in-out"
          >Signin</a
        >
        <% } else { %>
        <a
          href="/profile"
          class="inline-block ml-4 bg-purple-700 text-white font-semibold py-3 px-8 rounded-lg shadow-lg hover:bg-purple-800 transition duration-300 ease-in-out"
          >Get Started</a
        >
        <% } %>
      </div>

      <div class="mt-16">
        <p class="text-lg">
          Discover what your friends think about you, anonymously.
        </p>
        <p class="text-lg mt-2">No sign-up needed to send feedback.</p>
      </div>
    </div>
  </main>
  <%- include('./shared/footer'); -%>
</div>
