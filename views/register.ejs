<%- include('./shared/header'); -%>

<div
  class="min-h-screen w-full flex items-center justify-center bg-gray-50 px-6 py-12"
>
  <div class="w-full max-w-md bg-white p-10 rounded-xl shadow-xl">
    <% if (typeof error !== 'undefined') { %>
    <h2 class="text-xl font-semibold mb-6 text-center text-red-500">
      <%= error %>
    </h2>
    <% } %>

    <h2 class="text-3xl font-extrabold mb-8 text-center text-gray-800">
      Signup
    </h2>

    <form action="/registerHandler" method="post">
      <div class="mb-6">
        <label class="block text-lg font-medium text-gray-700 mb-2" for="name">
          Name
        </label>
        <input
          class="w-full p-3 border border-gray-300 rounded-lg shadow-sm text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
          id="name"
          name="name"
          type="text"
          placeholder="Enter your name"
          required
        />
      </div>

      <div class="mb-6">
        <label class="block text-lg font-medium text-gray-700 mb-2" for="email">
          Email
        </label>
        <input
          class="w-full p-3 border border-gray-300 rounded-lg shadow-sm text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
          id="email"
          name="email"
          type="email"
          placeholder="Enter your email"
          required
        />
      </div>

      <div class="mb-6">
        <label
          class="block text-lg font-medium text-gray-700 mb-2"
          for="password"
        >
          Password
        </label>
        <input
          class="w-full p-3 border border-gray-300 rounded-lg shadow-sm text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
          id="password"
          name="password"
          type="password"
          placeholder="Enter your password"
          required
        />
      </div>

      <div class="flex items-center justify-between mb-6">
        <button
          class="w-full bg-purple-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition duration-300 ease-in-out hover:bg-purple-700 focus:outline-none focus:ring-4 focus:ring-blue-300"
          type="submit"
        >
          Register
        </button>
      </div>

      <div class="text-center">
        <a
          href="/"
          class="font-semibold text-sm text-blue-800 hover:text-blue-700 transition duration-300"
        >
          Forgot Password?
        </a>
      </div>
    </form>
  </div>
</div>

<%- include('./shared/footer'); -%>
